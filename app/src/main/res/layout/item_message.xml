<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="18dp"
              android:paddingLeft="16dp"
              android:paddingRight="0dp"
              android:paddingTop="12dp"
              android:theme="@style/AT.Default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/donationBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="false"
            android:src="@drawable/badge"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/usernameHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="USERNAME"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/sendingState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/messageHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec consectetur nulla eget euismod tincidunt. Aenean luctus posuere metus, vitae blandit mi egestas sit amet."/>

</LinearLayout>