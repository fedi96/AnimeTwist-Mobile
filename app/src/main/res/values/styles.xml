<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme -->
    <style name="AT.Default" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:color">@color/gray_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_bg</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
    </style>

    <style name="AT.NoActionBar" parent="AT.Default">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AT.Fullscreen" parent="AT.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Individual Components. -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
    </style>

    <style name="TextView.SeriesTitle" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="TextView.Ongoing" parent="android:Widget.TextView">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">3dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/component_edittext</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="EditText.Message" parent="android:Widget.EditText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/gray_dark</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="EditText.Search" parent="android:Widget.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColorHint">@color/red_light</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/component_button</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/component_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/component_progress_indeterminate_horizontal</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

</resources>
